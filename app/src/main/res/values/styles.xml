<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 车载主题样式 -->
    <style name="Theme.CarApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/car_primary</item>
        <item name="colorPrimaryDark">@color/car_background</item>
        <item name="colorAccent">@color/car_accent</item>
        <item name="android:windowBackground">@color/car_background</item>
        <item name="android:statusBarColor">@color/car_background</item>
        <item name="android:navigationBarColor">@color/car_background</item>
    </style>

    <!-- Tab文字样式 -->
    <style name="CarTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 车载按钮样式 -->
    <style name="CarButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- 车载卡片样式 -->
    <style name="CarCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/car_item_background</item>
    </style>

    <!-- 车载大标题文字样式 -->
    <style name="CarTextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/car_text_primary</item>
    </style>

    <!-- 车载内容文字样式 -->
    <style name="CarTextContent">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/car_text_primary</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- 车载次要文字样式 -->
    <style name="CarTextSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/car_text_secondary</item>
    </style>
</resources> 